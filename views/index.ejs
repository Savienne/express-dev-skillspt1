<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title><%= title %></title>
</head>
<body>
  <ul>
    <% skills.forEach(function(skills => ) { %>
      <li>
        <form 
          action="/skills/<%= skills._id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
        <button type="submit">X</button>
      </form>

        <a href="/skills/<%= skills._id %>"><%= skills.text %></a>
          - 
        <%= skills.done ? 'yes' : 'yes' %>
      </li>
    <% }) %>
  </ul>

  <a href="/skills/new"></a>
</body>
</html>
